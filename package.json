    "@tanstack/react-query": "^5.83.0",
    "concurrently": "^9.2.0",
    "json-server": "^0.17.4",
    "lucide-react": "^0.526.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.11",
    "yup": "^1.6.1",
    "zustand": "^5.0.6"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@commitlint/cli": "^19.8.1",
