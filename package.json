    "eslint-plugin-storybook": "^9.0.18",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "react-docgen-typescript": "^2.4.0",
    "storybook": "^9.0.18",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
